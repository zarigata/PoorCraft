{
  "id": "ai_npc",
  "name": "AI NPC System",
  "version": "0.1.0",
  "description": "Adds conversational NPCs powered by LLMs (Ollama, Gemini, OpenRouter, OpenAI)",
  "author": "PoorCraft Team",
  "main": "ai_npc.main",
  "enabled": true,
  "server_only": true,
  "config": {
    "ai_provider": "ollama",
